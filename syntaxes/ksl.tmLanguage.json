{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ksl",
	"patterns": [
		{
			"name": "comment.line.double-slash",
			"match": "//.*"
		},
		{
			"name": "comment.block",
			"begin": "/\\*",
			"end": "\\*/"
		},
		{
			"name": "keyword.control",
			"match": "\\b(if|else|for|while)\\b"
		},
		{
			"name": "storage.modifier",
			"match": "\\b(using|extern|namespace)\\b"
		},
		{
			"name": "entity.name.type",
			"match": "\\b(int|i8|i16|i32|i64|float|f32|f64|bool|null|str|void|char)\\b"
		},
		{
			"name": "keyword.operator",
			"match": "(==|!=|=|\\+|\\-|\\*|\\/|\\<|\\>|&&|\\|\\||\\;|\\,|\\+\\+|\\-\\-|\\!|\\.|\\?)"
		},
		{
			"name": "keyword.control",
			"match": "\\b(fn|return|break|continue|struct|enum|impl|interface|ref)\\b"
		},
		{
			"name": "constant.language",
			"match": "\\b(true|false)\\b"
		},
		{
			"name": "constant.numeric",
			"match": "\\b(\\d+.\\d+|\\d+)\\b"
		},
		{
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		{
			"name": "string.quoted.single",
			"match": "\\'.\\'"
		},
		{
			"name": "entity.name.function",
			"match": "([a-zA-Z_][a-zA-Z0-9_]*\\s+*\\()"
		},
		{
			"name": "entity.name.type",
			"match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
		},
		{
			"name": "entity.other.attribute-name",
			"begin": "@\\[",
			"end": "\\]",
			"patterns": [{
				"name": "keyword.other.attribute-name",
				"match": "[a-z]+"
			}]
		}
	],
	"scopeName": "source.ksl"
}

