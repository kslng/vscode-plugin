{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ksl",
	"patterns": [
		{
			"name": "comment.line.double-slash.mycustom",
			"match": "//.*"
		},
		{
			"name": "keyword.control.ksl",
			"match": "\\b(if|else|using)\\b"
		},
		{
			"name": "keyword.operator.mycustom",
			"match": "(==|!=|=|\\+|\\-|\\*|\\/|\\<|\\>|&&|\\|\\||\\;|\\,|\\+\\+|\\-\\-)"
		},
		{
			"name": "storage.type.ksl",
			"match": "\\b(str|int|float|bool|function|return|for)\\b"
		},
		{
			"name": "constant.language.boolean",
			"match": "\\b(true|false)\\b"
		},
		{
			"name": "constant.numeric.ksl",
			"match": "\\b(\\d+.\\d+|\\d+)\\b"
		},
		{
			"name": "string.quoted.double.ksl",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.ksl",
				"match": "\\\\."
			}]
		},
		{
			"name": "entity.name.function.ksl",
			"match": "([a-zA-Z_][a-zA-Z_]*\\s+*\\()"
		}
	],
	"scopeName": "source.ksl"
}
